{
	"trailingComma": "all",
	"tabWidth": 4,
	"semi": true,
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"quoteProps": "as-needed",
	"useTabs": true,
	"singleQuote": false,
	"printWidth": 120,
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2
			}
		}
	]
}
